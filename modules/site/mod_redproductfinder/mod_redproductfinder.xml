<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" client="site" type="module"  method="upgrade">
	<name>redPRODUCTFINDER</name>
	<author>Redweb.dk</author>
	<creationDate>21-07-2011</creationDate>
	<copyright>redWEB ApS</copyright>
	<license>GNU/GPL</license>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<version>1.1.2</version>
	<description>Productfinder module for redPRODUCTFINDER</description>
	<files>
		<filename module="mod_redproductfinder">mod_redproductfinder.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>images</folder>
		<filename>helper.php</filename>
		<filename>redproductfinder.css</filename>
	</files>
	
	<languages>
    	<language tag="en-GB">language/en-GB/en-GB.mod_redproductfinder.ini</language>
    	<language tag="da-DK">language/da-DK/da-DK.mod_redproductfinder.ini</language>		
  	</languages>
	<config addfieldpath="/administrator/components/com_redproductfinder/elements">
 	 <fields name="params" >
	   <fieldset name="basic">
		
			 
			<field name="form" type="redproductfinderform" default="" label="FORM" description="" />
			<field name="type" type="redProductfindertype" default="" label="TYPE" description="" />
			<field name="pretext" type="textarea" cols="20" rows="3" default="" label="Pre-text" description="Smth like 'You are here:'" />	
			<field name="pretext_link" type="list" default="0" label="Is pre-text a link?" description="You may want it to be smth like 'Home'">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="pretext_url" type="text" default="" label="Enter the Pre-text URL" description="If choose Yes on above option" />
			<field name="buttonname" type="text" default="" label="BUTTON NAME" description="" />
			<field name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="PARAMMODULECLASSSUFFIX" />
			<field name="show_searchcriteria" type="radio" default="1" label="SHOW SEARCH CRITERIA" description="">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="show_productprice" type="radio" default="0" label="SHOW PRODUCT PRICE" description="">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="show_type" type="radio" default="0" label="SHOW TYPE" description="">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		  	<field name="itemid" type="text" default="" label="Enter Default Itemid" description="Enter Default Itemid" />
			<field name="monthpicker" type="redproductfindermonthpicker" multiple="multiple" size="12" label="Select Months"
			description="To Select Multiple Months Please Press Ctrl " />

			<field name="month_year" type="radio" default="0" label="Show Old Month Year" description="Default Month Year if select 'Yes' Only Old Month Year Display in Month picker.">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>

			
			<!--<param name="month_year" type="radio" default="0" label="Show Current Month Year" description="Default Month Year if select 'Yes' Only Current Year Display in Month picker Ex. 2011 ">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
		-->
		</fieldset>	
	</fields>
     </config >
</extension>