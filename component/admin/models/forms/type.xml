<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id" type="text" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" class="readonly"/>

		<field name="type_name" type="text" label="Type name" required="true"/>

		<field name="form_id" type="sql" label="Select form" query="SELECT id, formname FROM #__redproductfinder_forms WHERE published = 1" key_field="id" value_field="formname"/>

		<field name="type_select" type="list" label="Selector type">
			<option value="checkbox">Checkbox</option>
			<option value="generic">Generic</option>
			<option value="Productfinder_datepicker">Productfinder datepicker</option>
		</field>
		
		<field id="showname" name="showname" type="list" label="Show form name" class="chzn-color-state" size="1" default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field id="published" name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" size="1" default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
</form>
